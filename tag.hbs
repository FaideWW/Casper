{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<header class="row">
    <div class="column">
        <h1>{{@blog.title}}</h1>
        <h5>{{@blog.description}}</h5>
    </div>
</header>
<section class="row">
    <div class="column">
        <h3 class="page-title">#{{tag.name}}</h3>
        <h5 class="page-title">{{plural value empty="No posts" singular="% post" plural="% posts"}}</h5>
    </div>
</section>
<main class="body" id="content" role="main">
    {{> "loop"}}
</main>